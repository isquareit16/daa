#include <iostream>
using namespace std;
int mtr[20][20];
int n;
int sCount = 0;
bool safetyCheck(int r, int c)
{
    // Check column ki konti queen place ahe ka already
    for (int i = 0; i < r; i++)
    {
        if (mtr[i][c] == 1)
        { 
            return false;
        }
    }
    // Check left diagonal ki konti queen place ahe ka already
    for (int i = r - 1, j = c - 1; i >= 0 && j >= 0; i--, j--)
    {
        if (mtr[i][j] == 1)
        {
            return false;
        }
    }
    // Check right diagonal ki konti queen place ahe ka already
    for (int i = r - 1, j = c + 1; i >= 0 && j < n; i--, j++)
    {
        if (mtr[i][j] == 1)
        {
            return false;
        }
    }
    return true;
}
void displayBoard()
{
    cout << "Solution count " << sCount << endl;
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (mtr[i][j] == 1)
            {
                cout << "Q ";
            }
            else
            {
                cout << "- ";
            }
        }
        cout << endl;
    }
    cout << endl;
}
void placeQueen(int row)
{
    if (row == n)
    {
        sCount++;
        displayBoard();
        return;
    }
    for (int col = 0; col < n; col++)
    {
        if (safetyCheck(row, col))
        {
            mtr[row][col] = 1;
            placeQueen(row + 1);
            mtr[row][col] = 0;
        }
    }
}
int main()
{
    cout << "Enter the size of the board" << endl;
    cin >> n;
   
    sCount = 0;
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            mtr[i][j] = 0;
        }
    }
    placeQueen(0);
    cout << "total no of solutions: " << sCount << endl;
    return 0;
}
