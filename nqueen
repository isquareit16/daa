// Online C++ compiler to run C++ program online
#include <iostream>
#include<cmath>



using namespace std;

int board[20];
int n;
bool isSafe(int row,int col){
    for(int i=0;i<row;i++){
            if(board[i] == col || abs(board[i]-col)==abs(i-row)){
                return false;
            }
    }
    return true;
}
void solve(int row){
    if(row==n){
        for(int i=0;i<row;i++){
            for(int j=0;j<n;j++){
                if(board[i]==j){
                cout<<"Q";
                }else{
                cout<<".";
                }
            }
            cout<<"\n";
        }
        cout<<'\n';
        return;
    }
    
    for(int col=0;col<n;col++){
        if(isSafe(row,col)){
            board[row]=col;
            solve(row+1);
        }
    }
}

int main(){
    cout<<"ENter number of queens";
    cin>>n;
    solve(0);
    return 0;
}
