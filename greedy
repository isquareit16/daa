// Online C++ compiler to run C++ program online
#include <iostream>
#include<cmath>
using namespace std;

struct arr{
    double weight;
    double value;
    double ratio;
};
int main(){
    double profit=0;
    int n;
    cout<<"ENter number of items";
    cin>>n;
    cout<<"Enter capacity";
    double capacity;
    cin>>capacity;
    
    arr arr[n];
    cout<<"Enter weighht and values";
    for(int i=0;i<n;i++){
        cin>>arr[i].weight>>arr[i].value;
        arr[i].ratio=(arr[i].value)/(arr[i].weight);
    }
    
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(arr[j+1].ratio>arr[j].ratio){
                double temp_ratio, temp_weight, temp_value;
                temp_ratio=arr[j].ratio;
                arr[j].ratio=arr[j+1].ratio;
                arr[j+1].ratio=temp_ratio;

                temp_weight = arr[j].weight;
                arr[j].weight = arr[j+1].weight;
                arr[j+1].weight = temp_weight;
                
                temp_value = arr[j].value;
                arr[j].value = arr[j+1].value;
                arr[j+1].value = temp_value;
            }
        }
    }
    
    for(int i=0;i<n;i++){
        if(arr[i].weight<capacity){
            profit+=arr[i].value;
            capacity-=arr[i].weight;
        }else{
            profit=profit+(capacity/arr[i].weight)*arr[i].value;
        }
    }
        cout<<"max profit"<<profit;
    
    return 0;
}
